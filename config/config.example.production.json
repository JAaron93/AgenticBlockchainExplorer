{
  "_comment": "PRODUCTION CONFIGURATION - Review all security-sensitive settings before deployment",
  "_api_keys_comment": "All *_API_KEY values must be set via environment variables (ETHERSCAN_API_KEY, BSCSCAN_API_KEY, POLYGONSCAN_API_KEY) - never commit real API keys to source control",
  "explorers": [
    {
      "name": "etherscan",
      "base_url": "https://api.etherscan.io/api",
      "api_key": "${ETHERSCAN_API_KEY}",
      "type": "api",
      "chain": "ethereum"
    },
    {
      "name": "bscscan",
      "base_url": "https://api.bscscan.com/api",
      "api_key": "${BSCSCAN_API_KEY}",
      "type": "api",
      "chain": "bsc"
    },
    {
      "name": "polygonscan",
      "base_url": "https://api.polygonscan.com/api",
      "api_key": "${POLYGONSCAN_API_KEY}",
      "type": "api",
      "chain": "polygon"
    }
  ],
  "stablecoins": {
    "USDC": {
      "ethereum": "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48",
      "bsc": "0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d",
      "polygon": "0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174"
    },
    "USDT": {
      "ethereum": "0xdAC17F958D2ee523a2206206994597C13D831ec7",
      "bsc": "0x55d398326f99059fF775485246999027B3197955",
      "polygon": "0xc2132D05D31c914a87C6611C10748AEb04B58e8F"
    }
  },
  "auth0": {
    "_comment": "All Auth0 credentials must be set via environment variables - do not store secrets in config files",
    "domain": "${AUTH0_DOMAIN}",
    "client_id": "${AUTH0_CLIENT_ID}",
    "client_secret": "${AUTH0_CLIENT_SECRET}",
    "audience": "${AUTH0_AUDIENCE}",
    "callback_url": "${AUTH0_CALLBACK_URL}",
    "logout_url": "${AUTH0_LOGOUT_URL}"
  },
  "database": {
    "_comment": "DATABASE_URL must be set via environment variable - do not store credentials in config files",
    "url": "${DATABASE_URL}",
    "pool_size": 20,
    "max_overflow": 40
  },
  "app": {
    "_comment": "SECRET_KEY must be set via environment variable - generate with: python -c \"import secrets; print(secrets.token_urlsafe(32))\"",
    "env": "production",
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "secret_key": "${SECRET_KEY}"
  },
  "output": {
    "directory": "./output",
    "max_records_per_explorer": 1000
  },
  "retry": {
    "max_attempts": 3,
    "backoff_seconds": 60,
    "request_timeout_seconds": 30,
    "max_concurrent_requests": 5
  },
  "rate_limit": {
    "per_minute": 100
  },
  "logging": {
    "level": "WARNING",
    "format": "json"
  },
  "cors": {
    "allowed_origins": [
      "https://your-production-domain.com"
    ],
    "allow_credentials": true
  },
  "session": {
    "timeout_hours": 24,
    "cookie_secure": true,
    "cookie_httponly": true,
    "cookie_samesite": "strict"
  }
}
