{
  "_comment": "DEVELOPMENT CONFIGURATION - DO NOT USE IN PRODUCTION! See config.example.production.json and README.md for production settings",
  "explorers": [
    {
      "name": "etherscan",
      "base_url": "https://api.etherscan.io/api",
      "api_key": "YOUR_ETHERSCAN_API_KEY",
      "type": "api",
      "chain": "ethereum"
    },
    {
      "name": "bscscan",
      "base_url": "https://api.bscscan.com/api",
      "api_key": "YOUR_BSCSCAN_API_KEY",
      "type": "api",
      "chain": "bsc"
    },
    {
      "name": "polygonscan",
      "base_url": "https://api.polygonscan.com/api",
      "api_key": "YOUR_POLYGONSCAN_API_KEY",
      "type": "api",
      "chain": "polygon"
    }
  ],
  "stablecoins": {
    "USDC": {
      "ethereum": "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48",
      "bsc": "0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d",
      "polygon": "0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174"
    },
    "USDT": {
      "ethereum": "0xdAC17F958D2ee523a2206206994597C13D831ec7",
      "bsc": "0x55d398326f99059fF775485246999027B3197955",
      "polygon": "0xc2132D05D31c914a87C6611C10748AEb04B58e8F"
    }
  },
  "auth0": {
    "domain": "your-tenant.auth0.com",
    "client_id": "your_auth0_client_id",
    "client_secret": "your_auth0_client_secret",
    "audience": "https://your-api-identifier",
    "callback_url": "http://localhost:8000/callback",
    "logout_url": "http://localhost:8000"
  },
  "database": {
    "_comment": "Set DATABASE_URL in your .env file - see .env.example for format",
    "url": "${DATABASE_URL}",
    "pool_size": 10,
    "max_overflow": 20
  },
  "app": {
    "env": "development",
    "host": "0.0.0.0",
    "port": 8000,
    "debug": true,
    "secret_key": "your_secret_key_at_least_32_characters_long_change_this_in_production"
  },
  "output": {
    "directory": "./output",
    "max_records_per_explorer": 1000
  },
  "retry": {
    "max_attempts": 3,
    "backoff_seconds": 60,
    "request_timeout_seconds": 30,
    "max_concurrent_requests": 5
  },
  "rate_limit": {
    "per_minute": 100
  },
  "logging": {
    "level": "INFO",
    "format": "json"
  },
  "cors": {
    "allowed_origins": [
      "http://localhost:3000",
      "http://localhost:8000"
    ],
    "allow_credentials": true
  },
  "session": {
    "timeout_hours": 24,
    "cookie_secure": false,
    "cookie_httponly": true,
    "cookie_samesite": "lax"
  },
  "security": {
    "_comment": "Security hardening configuration - see docs/SECURITY.md for details",
    "credential_sanitizer": {
      "sensitive_param_names": [
        "apikey",
        "api_key",
        "API_KEY",
        "token",
        "auth_token",
        "secret",
        "password",
        "client_secret"
      ],
      "sensitive_header_names": [
        "Authorization",
        "X-API-Key",
        "X-Auth-Token"
      ],
      "credential_patterns": [
        "[a-zA-Z0-9]{32,}",
        "eyJ[a-zA-Z0-9_-]+\\.[a-zA-Z0-9_-]+\\.[a-zA-Z0-9_-]+"
      ],
      "redaction_placeholder": "[REDACTED]"
    },
    "ssrf_protection": {
      "allowed_domains": [
        "api.etherscan.io",
        "*.etherscan.io",
        "api.bscscan.com",
        "*.bscscan.com",
        "api.polygonscan.com",
        "*.polygonscan.com"
      ],
      "require_https": true,
      "block_private_ips": true
    },
    "resource_limits": {
      "max_response_size_bytes": 10485760,
      "max_output_file_size_bytes": 104857600,
      "max_memory_usage_mb": 512,
      "max_cpu_time_seconds": 3600
    },
    "timeouts": {
      "overall_run_timeout_seconds": 1800,
      "per_collection_timeout_seconds": 180,
      "shutdown_timeout_seconds": 30
    }
  }
}
