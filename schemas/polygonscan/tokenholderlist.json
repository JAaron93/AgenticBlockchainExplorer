{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stablecoin-explorer/schemas/polygonscan/tokenholderlist.json",
  "title": "Polygonscan Token Holder List Response",
  "description": "JSON Schema for Polygonscan tokenholderlist API endpoint response",
  "$comment": "Version 1.0.0. Strict root to enforce API envelope.",
  "type": "object",
  "required": ["status", "message", "result"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["0", "1"],
      "description": "API response status: 1 for success, 0 for error"
    },
    "message": {
      "type": "string",
      "description": "API response message"
    },
    "result": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tokenHolder"
          },
          "maxItems": 10000,
          "$comment": "Empty arrays are valid if no holders are returned but the call was successful."
        },
        {
          "type": "string",
          "description": "Error message or 'No token holder found'"
        }
      ]
    }
  },
  "definitions": {
    "tokenHolder": {
      "type": "object",
      "required": [
        "TokenHolderAddress",
        "TokenHolderQuantity"
      ],
      "properties": {
        "TokenHolderAddress": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Holder wallet address"
        },
        "TokenHolderQuantity": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Token balance in smallest unit"
        }
      },
      "additionalProperties": true,
      "$comment": "Intentionally true for forward compatibility."
    }
  },
  "additionalProperties": false
}
