{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stablecoin-explorer/schemas/bscscan/tokentx.json",
  "title": "BscScan Token Transfer Response",
  "description": "JSON Schema for BscScan tokentx API endpoint response",
  "version": "1.0.0",
  "type": "object",
  "required": ["status", "message", "result"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["0", "1"],
      "description": "API response status: 1 for success, 0 for error"
    },
    "message": {
      "type": "string",
      "description": "API response message"
    },
    "result": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tokenTransfer"
          },
          "maxItems": 10000
        },
        {
          "type": "string",
          "description": "Error message or 'No transactions found'"
        }
      ]
    }
  },
  "definitions": {
    "tokenTransfer": {
      "type": "object",
      "required": [
        "blockNumber",
        "timeStamp",
        "hash",
        "from",
        "to",
        "value",
        "contractAddress"
      ],
      "properties": {
        "blockNumber": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Block number as string"
        },
        "timeStamp": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Unix timestamp as string"
        },
        "hash": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{64}$",
          "description": "Transaction hash"
        },
        "nonce": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Transaction nonce as string"
        },
        "blockHash": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{64}$",
          "description": "Block hash"
        },
        "from": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Sender address"
        },
        "contractAddress": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Token contract address"
        },
        "to": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Receiver address"
        },
        "value": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Token amount in smallest unit"
        },
        "tokenName": {
          "type": "string",
          "minLength": 1,
          "description": "Token name"
        },
        "tokenSymbol": {
          "type": "string",
          "minLength": 1,
          "description": "Token symbol"
        },
        "tokenDecimal": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Token decimals as string"
        },
        "transactionIndex": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Transaction index in block"
        },
        "gas": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Gas limit"
        },
        "gasPrice": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Gas price in wei"
        },
        "gasUsed": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Gas used by transaction"
        },
        "cumulativeGasUsed": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Cumulative gas used in block"
        },
        "input": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]*$",
          "description": "Input data, often '0x' for simple transfers"
        },
        "confirmations": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Number of confirmations"
        }
      },
      "additionalProperties": true,
      "$comment": "Intentionally open to allow BscScan to add new fields to transfer records without breaking validation (forward compatibility)."
    }
  },
  "additionalProperties": false,
  "$comment": "Root schema is strict to enforce the standard API envelope structure."
}
