{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stablecoin-explorer/schemas/bscscan/tokenholderlist.json",
  "title": "BscScan Token Holder List Response",
  "description": "JSON Schema for BscScan tokenholderlist API endpoint response",
  "version": "1.0.0",
  "type": "object",
  "required": ["status", "message", "result"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["0", "1"],
      "description": "API response status: 1 for success, 0 for error"
    },
    "message": {
      "type": "string",
      "description": "API response message"
    },
    "result": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tokenHolder"
          },
          "maxItems": 10000
        },
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "pattern": "^(No token holder found|Error: .*)$",
          "description": "Error message or 'No token holder found'"
        }
      ]
    }
  },
  "definitions": {
    "tokenHolder": {
      "type": "object",
      "required": [
        "TokenHolderAddress",
        "TokenHolderQuantity"
      ],
      "properties": {
        "TokenHolderAddress": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "Holder wallet address"
        },
        "TokenHolderQuantity": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "Token balance in smallest unit"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "status": "1",
      "message": "OK",
      "result": [
        {
          "TokenHolderAddress": "0x1234567890123456789012345678901234567890",
          "TokenHolderQuantity": "1000000000000000000"
        }
      ]
    },
    {
      "status": "0",
      "message": "No transactions found",
      "result": "No token holder found"
    }
  ]
}
